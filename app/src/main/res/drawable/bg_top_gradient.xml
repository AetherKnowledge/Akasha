<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- 270 degrees: top to bottom (primary at top -> background at bottom) -->
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/ak_primary"
                android:endColor="@color/ak_background" />
        </shape>
    </item>
    
</layer-list>
