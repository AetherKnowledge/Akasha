<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <Space
            android:id="@+id/spaceTop"
            android:layout_width="0dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Profile image with circular border -->
        <FrameLayout
            android:id="@+id/profileImageContainer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/spaceTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/bg_avatar_primary"
                android:contentDescription="Profile picture" />

            <TextView
                android:id="@+id/txtInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/ak_on_background"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="A"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle_border_green" />
        </FrameLayout>

        <Space
            android:id="@+id/spaceAfterAvatar"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Name + edit -->
        <LinearLayout
            android:id="@+id/nameRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/spaceAfterAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ak_on_background"
                android:textStyle="bold"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edtDisplayName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/ak_on_background"
                android:background="@android:color/transparent"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btnEditName"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit_24"
                app:tint="@color/ak_on_background"
                android:contentDescription="Edit name"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Space
            android:id="@+id/spaceBeforeTools"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/nameRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Separator "Tools" -->
        <LinearLayout
            android:id="@+id/toolsSeparator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/spaceBeforeTools"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/ak_on_background"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tools"
                android:textColor="@color/ak_on_background"
                android:alpha="0.6"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/ak_on_background"
                android:alpha="0.3" />
        </LinearLayout>

        <Space
            android:id="@+id/spaceAfterToolsTitle"
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolsSeparator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Web Search toggle row -->
        <LinearLayout
            android:id="@+id/rowWebSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/spaceAfterToolsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtWebSearchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Search"
                    android:textColor="@color/ak_on_background"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtWebSearchDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow Akasha to browse the web for answers"
                    android:textColor="@color/ak_on_background"
                    android:alpha="0.7"
                    android:textSize="12sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchWebSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Space
            android:id="@+id/spaceGrow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/rowWebSearch"
            app:layout_constraintBottom_toTopOf="@id/bottomButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom Buttons row -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/btnReturn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_return"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_back_24"
                    app:tint="@color/ak_on_background"
                    android:contentDescription="Return" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return"
                    android:textColor="@color/ak_on_background"
                    android:textAllCaps="false"
                    android:textSize="14sp" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_danger"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_logout_24"
                    app:tint="@color/ak_on_background"
                    android:contentDescription="Log Out" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textColor="@color/ak_on_background"
                    android:textAllCaps="false"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:id="@+id/spaceBottom"
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/bottomButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>